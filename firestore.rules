rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /reviews/{reviewId} {
      // 1. Everyone can see reviews
      allow read: if true;
      
      // 2. Anyone who is signed in (Anonymous or Google) can create a review
      allow create: if request.auth != null;
      
      // 3. Edit/Delete Rules:
      // - You (the Admin) can edit or delete ANY review.
      // - Regular users can ONLY edit or delete their own reviews (matching UIDs).
      allow update, delete: if (request.auth != null && request.auth.uid == resource.data.userId) 
                            || (request.auth.token.email == 'projectsbuilding55@gmail.com');
    }
  }
}
